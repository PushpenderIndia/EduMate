# EduMate Agentic AI Platform - Environment Configuration
# Copy this file to .env and fill in your actual values

# Gemini API Configuration (for both text and image generation)
GEMINI_API_KEY=your_gemini_api_key_here

# TiDB Serverless Database Configuration
TIDB_SERVERLESS_HOST=gateway01.us-west-2.prod.aws.tidbcloud.com
TIDB_SERVERLESS_PORT=4000
TIDB_SERVERLESS_USER=your_tidb_serverless_username
TIDB_SERVERLESS_PASSWORD=your_tidb_serverless_password
TIDB_SERVERLESS_DATABASE=your_tidb_serverless_database_name
TIDB_CLOUD_EMAIL=your_hackathon_submission_email@domain.com

# Flask Application Configuration
SECRET_KEY=your_super_secret_key_here
FLASK_ENV=development

# Celery Configuration (Redis)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Agent System Configuration
AGENT_TIMEOUT_SECONDS=120
MAX_RETRIES=3
PARALLEL_WORKERS=3

# Comic Generation Settings
DEFAULT_CFG=8
DEFAULT_STEPS=25
DEFAULT_AGE_GROUP=child

# File System Configuration
STATIC_FOLDER=static

